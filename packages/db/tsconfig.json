{
    "compilerOptions": {
      "lib": ["es2020"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "es2022",
    "composite": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,             // Ensure each file can be safely transpiled without relying on other files.          // Include types for Node.js and Prisma.
      "outDir": "dist",                        // Output directory for compiled files.
      "rootDir": "src",                        // Specify the root directory of input files.
    },
    "include": ["src"],                        // Include all files in the `src` folder.
    "exclude": ["node_modules", "dist"]        // Exclude `node_modules` and the `dist` folder.
  }